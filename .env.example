# ==========================================
# APiGen - Environment Variables Template
# ==========================================
# Copy this file to .env and customize values
# NEVER commit .env to version control
# ==========================================

# ==========================================
# Database Configuration
# ==========================================
DB_URL=jdbc:postgresql://localhost:5432/apigen_dev
DB_USERNAME=apigen_user
DB_PASSWORD=your_secure_password_here

# ==========================================
# Application Settings
# ==========================================
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ==========================================
# CORS Configuration
# ==========================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080

# ==========================================
# Observability / Tracing
# ==========================================
TRACING_ENABLED=true
TRACING_SAMPLING_PROBABILITY=1.0
OTLP_ENDPOINT=http://localhost:4318/v1/traces

# ==========================================
# Logging
# ==========================================
LOG_PATH=./logs
LOG_LEVEL=INFO

# ==========================================
# Docker Compose Specific
# ==========================================
# PostgreSQL
POSTGRES_DB=apigen
POSTGRES_USER=apigen_user
POSTGRES_PASSWORD=your_secure_password_here

# pgAdmin (optional - only for development)
PGADMIN_DEFAULT_EMAIL=admin@apigen.local
PGADMIN_DEFAULT_PASSWORD=admin_password_here

# Grafana (optional - only for monitoring)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=grafana_password_here

# ==========================================
# Security / JWT
# ==========================================
# Required when SECURITY_ENABLED=true
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_min_64_chars_required_for_hs512_algorithm
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_MINUTES=10080
SECURITY_ENABLED=true

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ==========================================
# Cache Configuration (optional overrides)
# ==========================================
# CACHE_ENTITIES_MAX_SIZE=1000
# CACHE_ENTITIES_EXPIRE_MINUTES=10
# CACHE_LISTS_MAX_SIZE=100
# CACHE_LISTS_EXPIRE_MINUTES=5
